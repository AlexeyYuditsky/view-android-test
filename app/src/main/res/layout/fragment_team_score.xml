<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/teamOneLogoTextView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#17A6FF"
        android:gravity="center"
        android:text="Team 1"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/teamTwoLogoTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamTwoLogoTextView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#FF2651"
        android:gravity="center"
        android:text="Team 2"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/teamOneLogoTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamOneScoreTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        tools:text="0"
        android:textSize="24sp"
        android:textColor="#17A6FF"
        app:layout_constraintEnd_toStartOf="@id/teamTwoScoreTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/teamOneLogoTextView" />

    <TextView
        android:id="@+id/teamTwoScoreTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        tools:text="0"
        android:textColor="#FF2651"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/teamOneScoreTextView"
        app:layout_constraintTop_toBottomOf="@id/teamTwoLogoTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>